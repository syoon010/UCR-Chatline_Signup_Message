<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/secondPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timeline"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogoutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/secondPage" />

    <ImageView
        android:id="@+id/targetimage"
        android:layout_width="450px"
        android:layout_height="450px"
        android:layout_below="@+id/currentUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
    <TextView
        android:id="@+id/currentUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/secondPage"
        android:layout_alignLeft="@+id/targetimage"
        android:layout_alignStart="@+id/targetimage"
        android:layout_alignRight="@+id/targetimage"
        android:layout_alignEnd="@+id/targetimage" />

    <TextView
        android:id="@+id/displayHometown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/displayBirthday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/displayBirthday"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/displayHobby"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/displayHobby"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/targetimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>